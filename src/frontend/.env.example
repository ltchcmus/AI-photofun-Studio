# =========================================
# FIREBASE CONFIGURATION
# =========================================
# Lấy các giá trị từ Firebase Console:
# https://console.firebase.google.com/ > Project Settings > General > Your apps > Web
VITE_FIREBASE_API_KEY=[your_firebase_api_key]
VITE_FIREBASE_AUTH_DOMAIN=[your_project_id].firebaseapp.com
VITE_FIREBASE_PROJECT_ID=[your_project_id]
VITE_FIREBASE_STORAGE_BUCKET=[your_project_id].appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=[your_sender_id]
VITE_FIREBASE_APP_ID=[your_app_id]
VITE_FIREBASE_MEASUREMENT_ID=[your_measurement_id]
VITE_FIREBASE_DATABASE_URL=https://[your_project_id]-default-rtdb.firebaseio.com

# =========================================
# GOOGLE OAUTH CONFIGURATION
# =========================================
# Get from Google Cloud Console: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=[your_google_client_id]
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/google-loading

# =========================================
# API GATEWAY & SOCKET
# =========================================
VITE_API_GATEWAY=http://localhost:8888
VITE_SOCKET_URL=http://localhost:8888

# =========================================
# PAYMENT API CONFIGURATION
# =========================================
VITE_PAYMENT_API_URL=https://nmcnpm-payment-service.onrender.com/payment/create-payment
VITE_PAYMENT_API_KEY=[your_payment_api_key]

# =========================================
# CHATBOT API CONFIGURATION
# =========================================
VITE_CHATBOT_API_URL=https://agent.lethanhcong.site
VITE_CHATBOT_X_API_KEY=[your_chatbot_x_api_key]
VITE_CHATBOT_USER_ID=[your_chatbot_user_id]
VITE_CHATBOT_BEARER_TOKEN=[your_chatbot_bearer_token]

