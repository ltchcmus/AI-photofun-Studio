# ============================================================================
# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# ============================================================================

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB Configuration (for conversation app)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=ai_photofun_studio

# ============================================================================
# GEMINI API KEYS (for prompt refinement & intent detection)
# ============================================================================
# Single key (basic setup)
GEMINI_API_KEY=your-gemini-api-key-here

# Multiple keys (recommended for rate limit handling)
# Comma-separated list of API keys - system will rotate through them
GEMINI_API_KEYS=key1,key2,key3,key4,key5,key6

# PostgreSQL (Supabase) Configuration (for image_gallery app)
# Get these values from your Supabase project settings:
# https://app.supabase.com/project/_/settings/database
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-supabase-password
SUPABASE_DB_HOST=db.your-project-ref.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_SSLMODE=require

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# ============================================================================
# TOKEN SERVICE CONFIGURATION (External API)
# ============================================================================
# Get these from your friend who provides the token management API
TOKEN_SERVICE_URL=https://your-friend-api.com/api
TOKEN_SERVICE_API_KEY=your_secret_api_key_here
TOKEN_SERVICE_TIMEOUT=5

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=1          # Max requests per window
RATE_LIMIT_WINDOW=1            # Window in seconds
INPUT_SANITIZATION_ENABLED=True
INPUT_SANITIZATION_STRICT_MODE=False  # False=clean input, True=reject
INPUT_MAX_LENGTH=10000

# Environment (development/production)
ENVIRONMENT=development

# AI/ML Configuration
USE_GPU=False
GPU_DEVICE_ID=0

